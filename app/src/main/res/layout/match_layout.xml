<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/thumbHome"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/nameHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="Home team"
            android:layout_below="@id/thumbHome"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@id/thumbHome" />


        <TextView
            android:id="@+id/scoreHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:text="1"
            android:layout_toRightOf="@id/thumbHome"
            android:layout_alignStart="@id/thumbHome"
            android:layout_alignEnd="@id/dash"
            android:layout_below="@id/leagueName" />

        <TextView
            android:id="@+id/dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:text="-"
            android:layout_toLeftOf="@id/thumbAway"
            android:layout_toRightOf="@id/thumbHome"
            android:layout_below="@id/leagueName"/>

        <TextView
            android:id="@+id/scoreAway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:text="3"
            android:layout_toLeftOf="@id/thumbAway"
            android:layout_alignStart="@id/dash"
            android:layout_alignEnd="@id/thumbAway"
            android:layout_below="@id/leagueName" />

        <TextView
            android:id="@+id/nameAway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="Away Team"
            android:layout_below="@id/thumbAway"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@id/thumbAway"/>

        <ImageView
            android:id="@+id/thumbAway"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/leagueName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textAlignment="center"
            android:text="La Liga"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/thumbHome"
            android:layout_toLeftOf="@id/thumbAway" />

        <TextView
            android:id="@+id/date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textAlignment="center"
            android:text="02/19/2023 @ 17:00"
            android:layout_marginTop="10dp"
            android:layout_below="@id/dash"
            android:layout_toRightOf="@id/thumbHome"
            android:layout_toLeftOf="@id/thumbAway" />

        <TextView
            android:id="@+id/venue_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textAlignment="center"
            android:text="Venue of Match, Country"
            android:layout_below="@id/date_time"
            android:layout_toRightOf="@id/thumbHome"
            android:layout_toLeftOf="@id/thumbAway" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>